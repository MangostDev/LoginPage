<LoginManager>:
    Question1Screen:
        name: "question1"
    Question2Screen:
        name: "question2"
    CorrectScreen:
        name: "correct"
    ErrorScreen:
        name: "error"

<Question1Screen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "What is the state fruit of Texas?"
        BoxLayout:
            spacing: "25dp"
            padding: "25dp"
            Button:
                text: "Peach"
                on_release: root.answer_question(False)
            Button:
                text: "Orange"
                on_release: root.answer_question(False)
            Button:
                text: "Grapefruit"
                on_release: root.answer_question(True)

<Question2Screen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            name: "invalid"
        Label:
            text: "Complete the following verse: \n\n'The stars at night are big and bright,____________________"
            size_hint: 1,7
        TextInput:
            id: heart
            hint_text: "Enter remaining verse"
        Button:
            text: "Press Enter"
            on_release: root.answer_question(heart.text)

<CorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Correct!"
        Button:
            text: "Next"
            on_release: root.advance()

<ErrorScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "~Wrong!"